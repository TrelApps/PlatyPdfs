<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="PlatyPdfs.App.Pages.AboutPages.AboutInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PlatyPdfs.App.Pages.AboutPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <ScrollView
        Margin="0,10,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        CornerRadius="8">
        <StackPanel
            Padding="0,0,0,0"
            Orientation="Vertical"
            Spacing="4">

            <TextBlock
                x:Name="AboutHeader"
                FontFamily="Segoe UI Variable Display"
                FontSize="24"
                FontWeight="Bold"
                Text="About PlatyPdfs" />
            <TextBlock Text="PlatyPdfs provides tools that perform various operations on a pdf document." />
            <TextBlock
                x:Name="VersionText"
                Margin="0,10,0,10"
                FontSize="15"
                FontWeight="SemiBold"
                Text="" />
            <InfoBar
                Name="DisclaimerBanner"
                x:Uid="AboutPages_Information_Disclaimer"
                Margin="0,10,0,10"
                IsClosable="False"
                IsOpen="True"
                Severity="Warning" />

            <TextBlock
                FontFamily="Segoe UI Variable Display"
                FontSize="24"
                FontWeight="Bold"
                Text="Useful links" />
            <HyperlinkButton HorizontalAlignment="Stretch" NavigateUri="https://github.com/TrelApps/PlatyPdfs">
                <TextBlock Text=" Homepage" />
            </HyperlinkButton>
            <HyperlinkButton HorizontalAlignment="Stretch" NavigateUri="https://github.com/TrelApps/PlatyPdfs/issues">
                <TextBlock Text="Report an issue or submit a feature request" />
            </HyperlinkButton>
            <HyperlinkButton HorizontalAlignment="Stretch" NavigateUri="https://github.com/TrelApps/PlatyPdfs">
                <TextBlock Text="PlatyPdfs Repository" />
            </HyperlinkButton>

        </StackPanel>
    </ScrollView>
</Page>
